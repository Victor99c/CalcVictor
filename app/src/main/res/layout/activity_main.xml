<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textSize="25sp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428" />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="AC"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF8454"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnBorrar"
        app:layout_constraintBottom_toTopOf="@+id/button7"/>
    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="C"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF8454"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        app:layout_constraintLeft_toRightOf="@+id/btnLimpiar"
        app:layout_constraintRight_toLeftOf="@+id/btnPorcentaje"
        app:layout_constraintBottom_toTopOf="@+id/button8"/>
    <Button
        android:id="@+id/btnPorcentaje"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="%"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF8454"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        app:layout_constraintLeft_toRightOf="@+id/btnBorrar"
        app:layout_constraintRight_toLeftOf="@+id/btnDivision"
        app:layout_constraintBottom_toTopOf="@+id/button9"/>
    <Button
        android:id="@+id/btnDivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="/"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF5722"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        app:layout_constraintLeft_toRightOf="@+id/btnPorcentaje"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnMultiplicacion"
        android:onClick="operatorButtonClicked"/>
    <Button
        android:id="@+id/btnMultiplicacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="x"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF5722"
        app:layout_constraintTop_toBottomOf="@+id/btnDivision"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnResta"
        android:onClick="operatorButtonClicked"/>
    <Button
        android:id="@+id/btnResta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF5722"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiplicacion"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSuma"
        android:onClick="operatorButtonClicked"/>
    <Button
        android:id="@+id/btnSuma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF5722"
        app:layout_constraintTop_toBottomOf="@+id/btnResta"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnResultado"
        android:onClick="operatorButtonClicked"/>

    <Button
        android:id="@+id/btnResultado"
        android:layout_width="190dp"
        android:layout_height="0dp"
        android:text="="
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF5722"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintLeft_toRightOf="@+id/btnPunto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#8A8786"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        app:layout_constraintRight_toLeftOf="@+id/btnResultado"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#8A8786"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnPunto"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#8A8786"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        android:onClick="numberButtonClicked"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#8A8786"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintRight_toLeftOf="@+id/button3"
        app:layout_constraintBottom_toTopOf="@+id/btnPunto"
        android:onClick="numberButtonClicked"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#8A8786"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        app:layout_constraintRight_toLeftOf="@+id/btnSuma"
        app:layout_constraintBottom_toTopOf="@+id/btnResultado"
        android:onClick="numberButtonClicked"/>
    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#8A8786"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button5"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        android:onClick="numberButtonClicked"/>
    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#8A8786"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        app:layout_constraintRight_toLeftOf="@+id/button6"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        android:onClick="numberButtonClicked"/>
    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#8A8786"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        app:layout_constraintRight_toLeftOf="@+id/btnResta"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        android:onClick="numberButtonClicked"/>
    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#8A8786"
        app:layout_constraintTop_toBottomOf="@+id/btnLimpiar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button8"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        android:onClick="numberButtonClicked"/>
    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#8A8786"
        app:layout_constraintTop_toBottomOf="@+id/btnBorrar"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        app:layout_constraintRight_toLeftOf="@+id/button9"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        android:onClick="numberButtonClicked"/>
    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="#8A8786"
        app:layout_constraintTop_toBottomOf="@+id/btnPorcentaje"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        app:layout_constraintRight_toLeftOf="@+id/btnMultiplicacion"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        android:onClick="numberButtonClicked"/>


</androidx.constraintlayout.widget.ConstraintLayout>